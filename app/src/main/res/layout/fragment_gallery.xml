<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Buscar.SlideshowFragment" >


    <EditText
        android:id="@+id/qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="77dp"
        android:ems="10"
        android:hint="Folio de compra"
        android:inputType="text" />

    <ImageView
        android:id="@+id/buscar"
        android:layout_width="47dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/lupa" />

    <ImageView
        android:id="@+id/escaner"
        android:layout_width="45dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="313dp"
        android:src="@drawable/escaner" />

    <Button
        android:id="@+id/a침adirdon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="146dp"
        android:text="A침adir"
        android:visibility="invisible" />

    <Button
        android:id="@+id/finDon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="53dp"
        android:text="Finalizar Donaci칩n"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/nombDona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nombre del alimento"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/altasDona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp"
        android:text="A침ade tus productos a donar"
        android:textColor="@color/black"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/cantDon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="337dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Cantidad"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/dateDon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="256dp"
        android:ems="10"
        android:hint="Fecha de Caducidad"
        android:inputType="date"
        android:visibility="invisible" />
</RelativeLayout>